            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid PointerWheelChanged="Presenter_PointerWheelChanged">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ListView Background="Transparent"
                  x:Name="ListViewControl"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  RightTapped="ViewControl_RightTapped"
                  SelectionChanged="ViewControl_SelectionChanged"
                  SelectionMode="Extended"
                  ItemClick="ViewControl_ItemClick"
                  ContainerContentChanging="ViewControl_ContainerContentChanging"
                  CanDrag="False"
                  CanReorderItems="False"
                  AllowDrop="True"
                  DragOver="ViewControl_DragOver"
                  Drop="ViewControl_Drop"
                  IsHoldingEnabled="True"
                  IsItemClickEnabled="True"
                  IsDoubleTapEnabled="True"
                  Holding="ViewControl_Holding"
                  DoubleTapped="ViewControl_DoubleTapped"
                  PreviewKeyDown="ViewControl_PreviewKeyDown"
                  ShowsScrollingPlaceholders="False"
                  HeaderTemplate="{StaticResource ListViewDetailHeader}"
                  ItemTemplate="{StaticResource ListViewDetailContent}"
                  x:Load="False"
                  ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <GridView Name="GridViewControl"
                  Background="Transparent"
                  x:Load="False"
                  ContainerContentChanging="ViewControl_ContainerContentChanging"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  RightTapped="ViewControl_RightTapped"
                  Holding="ViewControl_Holding"
                  SelectionChanged="ViewControl_SelectionChanged"
                  SelectionMode="Extended"
                  ItemClick="ViewControl_ItemClick"
                  CanDrag="False"
                  CanReorderItems="False"
                  AllowDrop="True"
                  IsHoldingEnabled="True"
                  DragOver="ViewControl_DragOver"
                  Drop="ViewControl_Drop"
                  IsItemClickEnabled="True"
                  IsDoubleTapEnabled="True"
                  PreviewKeyDown="ViewControl_PreviewKeyDown"
                  DoubleTapped="ViewControl_DoubleTapped"
                  ShowsScrollingPlaceholders="False"
                  ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
        </GridView>
        <TextBlock Name="HasFile"
                   x:FieldModifier="public"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Uid="HasFile"
                   Text="无文件"
                   FontSize="16"
                   Visibility="Collapsed" />
        <Canvas>
            <Rectangle Fill="{ThemeResource SystemAccentColorDark2}"
                       Stroke="{ThemeResource SystemAccentColorLight2}"
                       x:Name="DrawRectangle"
                       Opacity="0.4"/>
        </Canvas>
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Bottom">
            <Grid>
                <Grid.RowDefinitions />
                
                <Border Height="3"
                    HorizontalAlignment="Stretch"
                    x:FieldModifier="public"
                    x:Name="FocusIndicator"/>
                <CommandBar IsOpen="False" Grid.Row="0"
                        ClosedDisplayMode="Minimal"
                        DefaultLabelPosition="Right"
                        Name="BottomCommandBar"
                        Opening="BottomCommandBar_Opening"
                        Background="{StaticResource ElementAcrylicBrush}" />
                  
                
                <TextBlock x:Name="StatusTips" Grid.Row="0" MaxWidth="200" 
                       x:FieldModifier="public"
                       FontSize="14"
                       Margin="10,0,0,0"
                       TextTrimming="CharacterEllipsis"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
            </Grid>
            
        </StackPanel>
    </Grid>
</Page>
